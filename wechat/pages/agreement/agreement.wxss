/* agreement.wxss */
page {
  background-color: #f5f5f5;
}

.agreement-container {
  min-height: 100vh;
  padding: 0 0 40rpx 0;
}

.agreement-header {
  background-color: #fff;
  padding: 60rpx 40rpx 40rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.agreement-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.update-time {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.agreement-content {
  padding: 40rpx;
}

.section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  line-height: 1.5;
}

.section-text {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 20rpx;
  text-align: justify;
}

.section-text:last-child {
  margin-bottom: 0;
}

.contact-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 40rpx;
  margin-top: 24rpx;
}

.contact-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 24rpx;
}

.contact-text {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.8;
  margin-bottom: 12rpx;
}

.contact-text:last-child {
  margin-bottom: 0;
}
