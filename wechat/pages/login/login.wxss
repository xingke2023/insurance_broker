/* login.wxss */
page {
  height: 100%;
  min-height: 100vh;
  background: linear-gradient(135deg, #0078D4 0%, #005A9E 100%);
  overflow: hidden;
}

.login-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 40rpx 40rpx calc(40rpx + env(safe-area-inset-bottom));
  position: relative;
  box-sizing: border-box;
}

.login-content {
  width: 100%;
  max-width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 auto;
}

/* Logo区域 */
.logo-section {
  margin-bottom: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  animation: fadeInDown 0.8s ease-out;
}

@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.logo-placeholder {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 40rpx;
  border-radius: 40rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 0.85) 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 100rpx;
  box-shadow: 0 16rpx 40rpx rgba(0, 0, 0, 0.2);
  backdrop-filter: blur(10rpx);
}

.app-name {
  font-size: 48rpx;
  color: #fff;
  font-weight: bold;
  letter-spacing: 2rpx;
  margin-bottom: 16rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.app-slogan {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  letter-spacing: 4rpx;
}

/* 登录信息 */
.login-info {
  margin-bottom: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  animation: fadeIn 1s ease-out 0.3s both;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.login-title {
  font-size: 36rpx;
  color: #fff;
  font-weight: bold;
  margin-bottom: 20rpx;
  letter-spacing: 2rpx;
}

.login-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.85);
  letter-spacing: 2rpx;
}

/* 登录按钮 */
.login-btn {
  width: 600rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #07c160 0%, #06ad52 100%);
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 34rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 12rpx 32rpx rgba(7, 193, 96, 0.4);
  animation: fadeInUp 0.8s ease-out 0.5s both;
  transition: all 0.3s;
  white-space: nowrap;
}

.login-btn.disabled {
  background: rgba(255, 255, 255, 0.3);
  box-shadow: none;
  color: rgba(255, 255, 255, 0.6);
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.login-btn:active {
  transform: scale(0.98);
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.3);
}

.login-btn::after {
  border: none;
}

/* 手机号授权区域 */
.phone-auth-section {
  width: 600rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30rpx;
}

.phone-btn {
  background: linear-gradient(135deg, #576fee 0%, #4a5dd8 100%) !important;
  box-shadow: 0 12rpx 32rpx rgba(87, 111, 238, 0.4) !important;
}

.wechat-icon-text {
  font-size: 40rpx;
  margin-right: 15rpx;
  line-height: 40rpx;
}

/* 用户协议 */
.agreement {
  position: fixed;
  bottom: calc(60rpx + env(safe-area-inset-bottom));
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
  padding: 0 40rpx;
  box-sizing: border-box;
  gap: 12rpx;
}

/* 复选框包装器 */
.checkbox-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 8rpx;
}

/* 复选框 */
.checkbox {
  width: 36rpx;
  height: 36rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.8);
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0.2);
  transition: all 0.3s;
}

.checkbox.checked {
  background-color: #07c160;
  border-color: #07c160;
}

.checkbox-icon {
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
  line-height: 1;
}

/* 协议内容 */
.agreement-content {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.agreement-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.agreement-link {
  font-size: 24rpx;
  color: #fff;
  text-decoration: underline;
  margin: 0 5rpx;
  font-weight: bold;
}

/* 用户信息完善区域 */
.user-info-section {
  width: 600rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30rpx;
  margin-bottom: 120rpx;
}

/* 提示信息 */
.info-tip {
  width: 100%;
  background-color: rgba(255, 255, 255, 0.15);
  border-radius: 20rpx;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.tip-icon {
  font-size: 32rpx;
}

.tip-text {
  flex: 1;
  font-size: 26rpx;
  color: #fff;
  line-height: 1.5;
}

/* 头像区域 */
.avatar-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.avatar-label,
.nickname-label {
  align-self: flex-start;
  font-size: 28rpx;
  color: #fff;
  font-weight: bold;
  margin-left: 10rpx;
}

/* 头像按钮容器 */
.avatar-btn-wrapper {
  width: 160rpx;
  height: 160rpx;
  padding: 0;
  margin: 0;
  background-color: transparent;
  border: none;
  border-radius: 80rpx;
  overflow: hidden;
}

.avatar-btn-wrapper::after {
  border: none;
}

/* 选中的头像预览 */
.selected-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.2);
}

/* 头像占位符 */
.avatar-placeholder {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border: 4rpx dashed rgba(255, 255, 255, 0.6);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.avatar-placeholder-icon {
  font-size: 60rpx;
}

.avatar-placeholder-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 昵称区域 */
.nickname-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.nickname-input {
  width: 100%;
  height: 80rpx;
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 80rpx;
  background-color: #07c160;
  border-radius: 40rpx;
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 8rpx 16rpx rgba(7, 193, 96, 0.3);
  margin-top: 20rpx;
}

.submit-btn::after {
  border: none;
}

.submit-btn[disabled] {
  background-color: rgba(255, 255, 255, 0.3);
  color: rgba(255, 255, 255, 0.6);
  box-shadow: none;
}
